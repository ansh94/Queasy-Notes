<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.anshdeep.simplenotes"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="notes.db"/>
        <meta-data
            android:name="VERSION"
            android:value="4"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.anshdeep.simplenotes"/>

        <activity
            android:name=".AddNoteActivity"
            android:label="@string/title_activity_add_note"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".ArchiveActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_archive"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".AddReminderActivity"
            android:parentActivityName=".ReminderActivity"
            android:label="@string/title_activity_add_reminder"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ReminderActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_reminder"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="false"/>

        <service
            android:name=".MyNewIntentService"
            android:exported="false"/>

        <activity
            android:name=".HelpActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
    </application>

</manifest>
